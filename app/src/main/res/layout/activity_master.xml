<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Dao.MasterActivity">

    <ScrollView
        android:layout_width="408dp"
        android:layout_height="726dp"

        android:background="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="331dp"
                android:layout_height="116dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/rounded_background"
                android:backgroundTint="@color/colorPrimaryCool"
                android:fontFamily="sans-serif-light"
                android:text="Қош келдіңіз"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/textViewNameMaster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:text="TextView"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_background"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="30dp"
                    android:background="@drawable/rounded_background"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageButton
                    android:id="@+id/imgInstallBtn"
                    android:layout_width="75dp"
                    android:layout_height="69dp"
                    android:layout_marginHorizontal="110dp"
                    android:layout_marginVertical="40dp"
                    android:backgroundTint="#FFFFFF"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/image_selected_ic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_background"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="333dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="@color/colorPrimaryCool"
                    android:fallbackLineSpacing="true"
                    android:fontFamily="sans-serif-light"
                    android:outlineProvider="none"
                    android:text="Саланы таңдаңыз"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="24sp" />

                <ListView
                    android:id="@+id/listView"
                    android:layout_width="188dp"
                    android:layout_height="234dp"
                    android:layout_gravity="center">

                </ListView>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="333dp"
                    android:layout_height="43dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="@color/colorPrimaryCool"
                    android:fontFamily="sans-serif-light"
                    android:text="Мекен жайы"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/idAdressMaster"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="20dp"
                    android:ems="10"
                    android:fontFamily="sans-serif-light"
                    android:inputType="text"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="333dp"
                    android:layout_height="43dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="@color/colorPrimaryCool"
                    android:fontFamily="sans-serif-light"
                    android:text="Өзіңіз жайлы"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/idInfoMaster"
                    style="@style/Widget.Material3.TextInputEditText.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="40dp"
                    android:ems="10"
                    android:fontFamily="sans-serif-light"
                    android:gravity="start|top"
                    android:hint="..."
                    android:inputType="textMultiLine"
                    android:singleLine="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textSize="24sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/menuTwoBtn"
        android:layout_width="411dp"
        android:layout_height="80dp"
        android:background="#F4B863"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/idAcceptBtn"
            android:layout_width="156dp"
            android:layout_height="72dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/colorPrimaryCool"
            android:fontFamily="sans-serif-light"
            android:onClick="onClickEngizu"
            android:text="Енгізу"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/colorPrimaryCool"
            android:fontFamily="sans-serif-light"
            android:onClick="OnViewList"
            android:text="Тізім көру"
            android:textSize="24sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
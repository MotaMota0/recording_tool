<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryCool">

    <!-- Контейнер для фрагментов -->

    <!-- Нижняя панель навигации -->

    <FrameLayout
        android:id="@+id/fragmentLayout"
        android:layout_width="0dp"
        android:layout_height="695dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="SaveDataTime"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Заголовок -->

                <!-- Выпадающий список для выбора услуги -->
                <TextView
                    android:id="@+id/tvBookingTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Book a Service"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Календарь -->

                <!-- Выбор времени -->

                <CalendarView
                    android:id="@+id/calendarView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="#FFFFFF" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/idSelectTime"
                    android:layout_width="404dp"
                    android:layout_height="wrap_content"
                    android:hint="Select time and Write your name :)"
                    android:padding="8dp"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/editTextText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:ems="10"
                    android:fontFamily="sans-serif-light"
                    android:inputType="text" />

                <TimePicker
                    android:id="@+id/timePicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:timePickerMode="spinner" />

                <!-- Кнопка для подтверждения бронирования -->
                <Button
                    android:id="@+id/btnConfirmBooking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:backgroundTint="#FFFFFF"
                    android:onClick="SaveDataTime"
                    android:text="Confirm Booking"
                    android:textColor="#000000" />
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

